<div class='modal__elements' data-id={{id}}>
<div>
  <button type="button" class="modal__elements-arrow  arrow__left"  data-action="prev-film"
        title="Previous">
    &#5176;
  </button>
  <button type="button" class="modal__elements-arrow arrow__right" data-action="next-film" title="Next">
    &#5171;
  </button>
  </div>
  {{#if poster_path}}
  <img
    class='modal__img'
    src='https://image.tmdb.org/t/p/w400{{poster_path}}'
    alt={{original_title}}
  />
  {{else}}
  <img
    class='modal__img'
    src='https://github.com/Dron010/filmoteka/blob/main/src/images/content/no-image-poster.png?raw=true'
    alt={{original_title}}
  />
  {{/if}}
  <div>
    <h3 class='modal__title'>{{original_title}}</h3>

    <div class='modal__film-container'>
      <ul class='modal__film'>
        <li class='modal__film-details'>Vote/Votes</li>
        <li class='modal__film-data'><span
            class='raiting raiting--modal'
          >&nbsp{{vote_average}}&nbsp</span>/ &nbsp{{vote_count}}</li>
      </ul>
      <ul class='modal__film'>
        <li class='modal__film-details'>Popularity</li>
        <li class='modal__film-data'>{{popularity}}</li>
      </ul>
      <ul class='modal__film'>
        <li class='modal__film-details modal__orig-title'>Original Title</li>
        <li class='modal__film-data modal__data-title'>{{original_title}}</li>
      </ul>
      <ul class='modal__film'>
        <li class='modal__film-details'>Genre</li>
        <ul class='modal__film-data modal__genres-list'>
          {{#each genres}}
            <li class='modal__film-data modal__genres-item'>{{this.name}}</li>
          {{/each}}
        </ul>
      </ul>
    </div>
    <h4 class='modal__about'>About</h4>
    <p class='modal__text'>{{overview}}</p>
    <ul class='modal__list-btn'>
      <li class='modal__item'><button
          class='modal__item-btn'
          data-watched
          data-id={{id}}
          type='button'
        >add to Watched</button></li>
      <li class='modal__item'><button
          class='modal__item-btn'
          data-queue
          data-id={{id}}
          type='button'
        >add to queue</button></li>
    </ul>
  </div>
</div>